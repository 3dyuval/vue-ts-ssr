{
	"compilerOptions": {
		"outDir": "dist",
		"types": ["node"],
		"target": "ESNext",
		"useDefineForClassFields": true,
		"module": "NodeNext",
		"moduleResolution": "NodeNext",
		"strict": true,
		"jsx": "preserve",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"lib": ["ESNext", "DOM"],
		"skipLibCheck": true,
		"noEmit": true,
		"baseUrl": "./",
		"paths": {
			"@/*": ["./src/*", "./netlify/*"]
		}
	},
	"include": ["src/**/*.ts", "src/**/*.d.ts", "src/**/*.tsx", "src/**/*.vue"],
	"exclude": [
		"node_modules",
		"dist",
		"src/**/*.spec.ts",
		"src/**/*.test.ts",
		"src/**/*.test.tsx",
		"src/**/*.test.js",
		"src/**/*.spec.js",
		"@fawmi/vue-google-maps",
		"fast-deep-equal"
	]
}
